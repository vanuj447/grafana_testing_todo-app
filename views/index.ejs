<h2 class="mb-4">Your Todos</h2>

<form action="/add" method="POST" class="d-flex mb-4">
  <input type="text" name="task" class="form-control me-2" placeholder="Enter a new todo" required>
  <button type="submit" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Add
  </button>
</form>

<div class="row">
  <% if (todos.length === 0) { %>
    <p class="text-muted">No tasks yet! ðŸŽ‰</p>
  <% } else { %>
    <% todos.forEach(task => { %>
      <div class="col-md-6 col-lg-4 mb-3">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-center">
            <span><i class="bi bi-check2-square text-primary me-2"></i> <%= task %></span>
            <a href="/delete/<%= task %>" class="btn btn-sm btn-danger">
              <i class="bi bi-trash"></i>
            </a>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>
