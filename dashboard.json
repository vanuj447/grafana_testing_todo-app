{
  "id": null,
  "title": "Todo App - Metrics & Logs",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "Total Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(app_requests_total)",
          "legendFormat": "requests"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "Requests per Endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(app_requests_total[1m]))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Request Latency (95th Percentile)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(app_request_latency_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 }
    },
    {
      "type": "bargauge",
      "title": "Todos Created vs Deleted",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (action) (increase(app_todos_total[5m]))",
          "legendFormat": "{{action}}"
        }
      ],
      "gridPos": { "x": 12, "y": 6, "w": 6, "h": 6 }
    },
    {
      "type": "stat",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "memory"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 4 }
    },
    {
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[1m])",
          "legendFormat": "CPU"
        }
      ],
      "gridPos": { "x": 6, "y": 12, "w": 12, "h": 6 }
    },
    {
      "type": "logs",
      "title": "Todo App Logs",
      "datasource": "Loki",
      "targets": [
        {
          "expr": "{app=\"todo-app\"}"
        }
      ],
      "gridPos": { "x": 0, "y": 18, "w": 24, "h": 8 }
    }
  ],
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s"
}
